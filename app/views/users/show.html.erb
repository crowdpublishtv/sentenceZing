<div class="userProfile">
	<p id="notice"><%= notice %></p>

  	<div class="row" >
    	<div class="col-md-4 col-sm-4 col-xs-4" >
        	<% if @user.image.present? && @user.image != "" %>
          		<%= image_tag(@user.image, :size => "200x250") %> 
        	<% else %>
          		<%= image_tag "default_profile.jpg", :size => "200x250" %>
        	<% end %>
    	</div>

    	<div class="col-md-4 col-sm-4 col-xs-8" >
        	<% if @user.banner.present? && @user.banner != "" %>
          		<%= image_tag(@user.banner, :size => "500x250") %>
        	<% else %>
          		<%= image_tag "default_banner.jpg", :width => "500" %>
        	<% end %>
    	</div>
  	</div>
  
  	<div class="row" >
    	<div class="col-md-4 col-sm-4 col-xs-4" > 
      		<div class="userinfo" >
   	    		<strong>Username: </strong> <%= @user.name %>  <br>
        		<strong>Status: </strong>  
        		<% if @user.loggedin == 1 %>
          			Online 
        		<% else %>
          			Offline
        		<% end %> 
        		<br>
        		<strong>SentenceZings: </strong> <%= @user.microposts.count %>  <br>
        		<strong> <%= @user.followed_users.count %> <%= link_to 'following', following_user_path(@user) %></strong> 
        		<strong> <%= @user.followers.count %> <%= link_to 'followers', followers_user_path(@user) %></strong> <br>
        		<%= render 'follow_form' if signed_in? %>
      		</div>
    	</div>
    	<div class="col-md-1 col-sm-1 col-xs-1" > 
		</div>
    	<div class="col-md-7 col-sm-7 col-xs-7" > 
    		<div class="userinfo2" >
        		<br><strong>User Bio: </strong> <br>
            <% if @user.aboutme %> 
          		<%= simple_format @user.aboutme.gsub(/\r\n/, '<br>') %> 
            <% end %>
        		<strong>Stories Contributed to:</strong><br>
        		<% @stories.each do |story| %>
          			<% if @user.id == story.user_id || @user.id == story.user2id %>
            			<%= link_to story.title, edit_story_path(story.id) %> <br>
          			<% end %>
        		<% end %>
      		</div>
   		</div>
 	</div>
</div>